{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "Map of local gov area Victoria",
  "width": 800,
  "height": 500,
  "title": "Victoria Motor Crashes per 1000 People",
  "data": {
    "url": "https://sayujmonash.github.io/FIT3179/LocalGov2.json",
    "format": {
      "property": "features"
    }
  },
  "transform": [
    {
      "lookup": "properties.vic_lga__3",
      "from": {
        "data": {
          "url": "https://sayujmonash.github.io/FIT3179/MapFinal.csv"
        },
        "key": "LGA_NAME_R",
        "fields": [
          "LGA_NAME_R",
          "Crashes Per 1000 People"
        ]
      }
    }
  ],
"projection": { 
	"parallels": [-34.5, -38], 
	"rotate": [-141, 0, 0],
	"type": "conicEqualArea"

  },
  "mark": {
    "type": "geoshape",
    "stroke": "#757575",
    "strokeWidth": 0.5,
    "tooltip": true
  },
  "encoding": {
    "color": {
      "field": "Crashes Per 1000 People",
      "type": "quantitative",
      "scale": {
        "scheme": "yelloworangered",
        "type": "threshold",
        "domain": [10,15,20,25,35]
      },
      "legend": {
        "title": null
      }
    },
    "tooltip": [
      {
        "field": "properties.vic_lga__3",
        "type": "nominal",
        "title": "Name",
        "format": ".2f" 
      },
      {
        "field": "Crashes Per 1000 People",
        "type": "quantitative",
        "title": "Crashes per 1000 people"
      }
    ]
  },
  "config": {  
    "style": {
    "cell": {
      "stroke": "transparent"
    }
  }
  }
}
